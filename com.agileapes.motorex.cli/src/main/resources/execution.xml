<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Value readers -->
    <bean class="com.agileapes.motorex.cli.value.impl.FileValueReader"/>
    <bean class="com.agileapes.motorex.cli.value.impl.PatternValueReader"/>
    <bean class="com.agileapes.motorex.cli.value.impl.CommonTypesValueReader"/>
    <bean class="com.agileapes.motorex.cli.value.impl.SpringValueReaderContext"/>

    <!-- Configuration -->
    <bean class="com.agileapes.motorex.cli.target.impl.SpringExecutionTargetContext"/>
    <bean class="com.agileapes.motorex.cli.exec.ExecutionConfigurator"/>

</beans>